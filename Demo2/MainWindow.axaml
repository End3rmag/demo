<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        WindowStartupLocation="CenterScreen"
        x:Class="Demo2.MainWindow"
        Title="Demo2">
        <Border Width="410" Background="#6b7280" Height="430" CornerRadius="20">
			<Border Width="395" Background="#16a34a" Height="415" CornerRadius="20">
                <StackPanel Spacing="15" Orientation="Vertical">

				<TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="25" Margin="0 10"/>
                
                    <StackPanel Margin="0 15">
						<TextBlock  Text="Email" FontSize="16" HorizontalAlignment="Center" Margin="0 0 230 0"/>
                        <TextBox Name="auth_email" Watermark="Введите почту..." Width="280"  />
                    </StackPanel>

                    <StackPanel Margin="0 15">
						<TextBlock   Text="Пароль" FontSize="16" HorizontalAlignment="Center" Margin="0 0 210 0"/>
                        <TextBox Name="auth_password" Watermark="*********" Width="280"  />
                    </StackPanel>

                    <StackPanel>
						<TextBlock Text="Если у вас неn зарегистрированного" Margin="70 0 0 0"/>
                        <StackPanel Orientation="Horizontal">
						<TextBlock Text="аккаунта, то нажмите на" Margin="40 5 0 0"/>
                            <Button Click="Button_Click" Content="зарегистрироваться" Background="transparent" BorderBrush="transparent" BorderThickness="0" Margin="-3 0 0 0">
                            </Button>
                    </StackPanel>

                        <Button Name="Authification" HorizontalAlignment="Center" Content="Войти" FontSize="20" Background="#ea580c" Margin="0 30 0 0" HorizontalContentAlignment="Center" Width="150" Click="Authification_Click"></Button>
                        </StackPanel>
                </StackPanel>
            </Border> 
        </Border>
</Window>
